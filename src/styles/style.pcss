@import 'https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap';

:root {
  --primary: #3369f3;
  --danger: red;
  /* stylelint-disable-next-line color-hex-length */
  --danger-text: #ff0000;
}

*,
html {
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
}

.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  border: 0;
  padding: 0;
  white-space: nowrap;
  clip-path: inset(100%);
  clip: rect(0 0 0 0);
  overflow: hidden;
}
