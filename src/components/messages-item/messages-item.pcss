.messages-item {
  position: relative;
  padding: 12px;
  border-radius: 15px;
  margin-bottom: 20px;
  min-width: 125px;
  max-width: 45%;

  &:last-child {
    margin-bottom: 0;
  }

  &--from {
    margin-right: auto;
    background-color: var(--decorate-dark-active-status);
    padding-right: 45px;

    .messages-item__time {
      color: var(--decorate-dark-active-status);
    }
  }

  &--to {
    margin-left: auto;
    background-color: var(--decorate-light-active-status);
    padding-right: 60px;

    .messages-item__time {
      color: var(--primary);
    }
  }

  &__text {
    margin: 0;
  }

  &__status {
    position: absolute;
    right: 40px;
    bottom: 13px;
  }

  &__time {
    bottom: 11px;
    right: 11px;
    font: 500 9px/1.2em 'Inter', sans-serif;
  }
}
